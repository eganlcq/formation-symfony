{% block _annonce_images_widget %}
    {{ form_widget(form) }}
{% endblock %}

{% block _annonce_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-md-12 mb-3">
                {% if value %}
                    <img src="{{ value.url }}" alt="img" class="img-fluid rounded">
                    {{ form_widget(form.url, {'attr': {'style': 'display:none;'}}) }}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_widget(form.caption) }}
                {{ form_errors(form.caption) }}
            </div>
            <div class="col-2 text-left">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger"><i class="fas fa-trash"></i></button>
            </div>
        </div>
    </div>
{% endblock %}

{% block _annonce_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}