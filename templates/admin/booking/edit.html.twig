{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce n°{{ booking.id }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Modification de l'annonce n°{{ booking.id }}</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.startDate) }}
                {{ form_row(form.endDate) }}
                {{ form_row(form.comment) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-check"> Enregistrer les modifications</i></button>
        {{ form_end(form) }}
    </div>
{% endblock %}
